    <style>
      model-viewer.avatar-animated {
        width: 100%;
        max-width: 350px;
        height: 560px;
        margin: auto;
        border-radius: 1.25rem;
        overflow: hidden;
        opacity: 0;
        transform: scale(0.85) translateY(30px);
        animation: fadeZoomIn 1.5s ease-out forwards;
        animation-delay: 0.3s;
        position: relative;
        z-index: 50; /* asegÃºrate de que sea mayor que el contenedor de fondo */
      }

      @keyframes fadeZoomIn {
        to {
          opacity: 1;
          transform: scale(1) translateY(0);
        }
      }
    </style>

    <Separator text="Tech Stack" />
    <Techstack />
    <Separator text="Recent Projects" />
    <Projects />

    <script>
      const texts = [
        "Maria Paula (PauDev)",
        "a Web Designer",
        "a UI/UX Specialist",
        "a Frontend Developer",
      ];

      const animatedText = document.getElementById("animated-text");

      function typeWriter(text, i = 0) {
        if (i < text.length) {
          animatedText.textContent += text.charAt(i);
          setTimeout(() => typeWriter(text, i + 1), 100);
        } else {
          setTimeout(() => eraseText(), 2000);
        }
      }

      function eraseText() {
        const text = animatedText.textContent;
        let i = text.length;
        function erase() {
          if (i > 0) {
            animatedText.textContent = text.substring(0, i - 1);
            i--;
            setTimeout(erase, 50);
          } else {
            currentTextIndex = (currentTextIndex + 1) % texts.length;
            typeWriter(texts[currentTextIndex]);
          }
        }
        erase();
      }

      let currentTextIndex = 0;
      typeWriter(texts[currentTextIndex]);
    </script>

    <style>
      .text-gradient {
        background: linear-gradient(90deg, #ff00ff, #aa00ff, #8a2be2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    </style>
